                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                           asp-action="ContactUs">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-protocol="http" asp-host="thanh.com" asp-area="" asp-controller="book"
