@model LanguageModel
@{
    ViewData["Title"] = "AddNewLanguage";
}

<h3 class="display-4">Add New Language</h3>
@if (ViewBag.IsSuccess != null && ViewBag.IsSuccess == true)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
    <strong>Add new Language Success</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}
<form method="POST" asp-action="AddNewLanguage">
    @* <div asp-validation-summary="ModelOnly>" class="text-danger"></div> *@
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Add new Language" class="btn btn-primary" />
    </div>
</form>