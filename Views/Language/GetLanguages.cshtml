@model IEnumerable<LanguageModel>;
@{
    ViewData["Title"] = "Get All Languages";
}

<div class="text-center">
    <div class="container">
        <h1 class="display-4">All Language</h1>
        <div class="row">
            @foreach (var language in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm" style="width: 18rem;">
                        <img src="~/images/unnamed.jpg" class="card-img-top" alt="unnamed">
                        <div class="card-body">
                            <h3 class="card-title">@language.Name</h3>
                            <p class="card-text">@language.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-route="languageDetailsRoute" asp-route-id="@language.Id"
                                        class="btn btn-sm btn-outline-secondary">View Details</a>
                                        @* asp-fragment="similarlanguages" *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
