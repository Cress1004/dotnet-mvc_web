@* @{
    ViewData["Title"] = "Home";
} *@

@{
    var book = ViewData["Book"] as BookModel;
}

<section class="jumbotron text-center">
    <div class="container">
        <img src="~/images/logo.png" class="logo" alt="logo">
        <h1 class="display-4">Welcome To Home Page @ViewData["CustomProperty"]</h1>
        <p>
            @book.Id - @book.Title
        </p>
        <h3>@DateTime.Now</h3>
        <p>
            <a href="#" class="btn btn-primary my-2">Search Books</a>
        </p>
    </div>
</section>
<div class="py-5 bg-light">
    <div class="container">
        @* <h3>Top Books</h3> *@
        <big>Top Books</big>
        <p big>Top Books using attribute</p>
        <div class="row">
            <div class="col-md-4">
                @*<partial name="_bookThumbnail" model= "new BookModel()" />*@
                @Html.Partial("_bookThumbnail", new BookModel())
            </div>
            <div class="col-md-4">
                @*<partial name="_bookThumbnail" model= "new BookModel()" />*@
                @await Html.PartialAsync("_bookThumbnail", new BookModel())
            </div>
            <div class="col-md-4">
                @*<partial name="_bookThumbnail" model= "new BookModel()" />*@
                @Html.RenderPartial("_bookThumbnail", new BookModel())
            </div>
            <div class="col-md-4">
                @*<partial name="_bookThumbnail" model= "new BookModel()" />*@
                @await Html.RenderPartialAsync("_bookThumbnail", new BookModel())
            </div>
        </div>
    </div>
</div>
